{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "gcc-arm",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "${sourceDir}/cmake/gcc-arm-none-eabi.cmake"
        }
      },
      "architecture": {
        "value": "unspecified",
        "strategy": "external"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "linux-gcc-arm"
        }
      }
    },
    {
      "name": "debug_arm",
      "inherits": "gcc-arm",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release_arm",
      "inherits": "gcc-arm",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "win",
      "displayName": "win",
      "description": "Using compilers for Visual Studio 15 2017 (x64_x86 architecture)",
      "generator": "Visual Studio 15 2017",
      "toolset": "host=x64",
      "architecture": "win32",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "release",
      "configurePreset": "release_arm",
      "targets": [
        "playground"
      ]
    },
    {
      "name": "debug",
      "configurePreset": "debug_arm",
      "targets": [
        "playground"
      ]
    },
    {
      "name": "win-debug",
      "displayName": "windows",
      "configurePreset": "win",
      "configuration": "Debug",
      "targets": [
        "test_playground"
      ]
    }
  ]
}